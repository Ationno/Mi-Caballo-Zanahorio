<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_game"
    android:clipChildren="false"
    android:clipToPadding="false"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_menu"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/top_menu_background"
            >

        </androidx.constraintlayout.widget.ConstraintLayout>
        <LinearLayout
            android:id="@+id/button_group_game"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="25dp"
            android:clipChildren="false"
            android:clipToPadding="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:id="@+id/btnPause"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/button_selector"
                android:contentDescription="@string/pausar_juego"
                android:src="@drawable/ic_pause"
                app:tint="@color/white" />

            <ImageButton
                android:id="@+id/btn_settings"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/button_selector"
                android:contentDescription="@string/abrir_configuracion"
                android:src="@drawable/ic_settings"
                app:tint="@color/white" />

        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/time_constraint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/progress_bar_constraint"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/time_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/comixloud"
                    android:text="@string/tiempo_game"
                    android:textColor="@color/dark_orange"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/total_time"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:background="@drawable/button_background"
                    android:fontFamily="@font/comixregular"
                    android:gravity="center"
                    android:text="00:00"
                    android:textColor="@android:color/white"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/progress_bar_constraint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="vertical"
                android:clipChildren="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/error_constraint"
                app:layout_constraintStart_toEndOf="@+id/time_constraint"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tv_difficulty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/comixloud"
                    android:text="@string/facil_game"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/dark_orange"
                    android:textSize="12sp" />

                <ProgressBar
                    android:id="@+id/progress_bar"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="200dp"
                    android:layout_height="20dp"
                    android:max="100"
                    android:progress="0"
                    android:progressTint="@color/dark_orange"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/error_constraint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/progress_bar_constraint"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/error_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/comixloud"
                    android:text="@string/errores_game"
                    android:textColor="@color/dark_orange"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/error_value"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:background="@drawable/button_background"
                    android:fontFamily="@font/comixregular"
                    android:gravity="center"
                    android:text="@string/cantidad_errores"
                    android:textColor="@android:color/white"
                    android:textSize="20sp" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/score_constraint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.70"
            app:layout_constraintStart_toEndOf="@+id/layout_progress"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/comixloud"
                android:text="@string/puntaje_game"
                android:textColor="@color/dark_orange"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/score_value"
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:background="@drawable/button_background"
                android:fontFamily="@font/comixregular"
                android:gravity="center"
                android:text="@string/value_puntaje_game"
                android:textColor="@android:color/white"
                android:textSize="24sp" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageButton
        android:id="@+id/btn_hint"
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:tint="@color/white"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="15dp"
        android:src="@drawable/ic_question_mark"
        android:background="@drawable/button_background"
        android:contentDescription="@string/pista_game"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/horse_image"
        android:layout_width="400dp"
        android:layout_height="340dp"
        android:contentDescription="@string/imagen_de_un_caballo"
        android:src="@drawable/horse_game"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.99" />

    <FrameLayout
        android:id="@+id/table_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <ImageView
            android:id="@+id/table_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX="1.3"
            android:scaleY="1.6"
            android:contentDescription="@string/imagen_de_una_mesa"
            android:src="@drawable/game_table" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/object_constraints"
            android:layout_width="451dp"
            android:layout_height="165dp"
            android:layout_marginTop="-30dp">

            <LinearLayout
                android:id="@+id/tools_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                >

                <ImageView
                    android:id="@+id/hard_scraper"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:contentDescription="Rasqueta dura."
                    android:src="@drawable/tool_1"
                    android:layout_marginEnd="40dp"
                    android:layout_marginStart="40dp"
                    />

                <ImageView
                    android:id="@+id/soft_scraper"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:contentDescription="Rasqueta blanda."
                    android:src="@drawable/tool_2"
                    android:layout_marginEnd="40dp"
                    />

                <ImageView
                    android:id="@+id/hoof_pick"
                    android:layout_width="90dp"
                    android:layout_height="80dp"
                    android:contentDescription="Escarba-vasos."
                    android:src="@drawable/tool_3" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tools_group"
                app:layout_constraintEnd_toEndOf="parent"
                >

                <ImageView
                    android:id="@+id/soft_brush"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:contentDescription="Cepillo blando."
                    android:src="@drawable/tool_4"
                    android:layout_marginEnd="80dp"
                    android:layout_marginStart="20dp"
                    />

                <ImageView
                    android:id="@+id/hard_brush"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:contentDescription="Cepillo duro."
                    android:src="@drawable/tool_5" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
