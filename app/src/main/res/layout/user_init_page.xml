<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/user_profile"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginTop="50dp"
        android:contentDescription="@string/avatar_del_usuario"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/first_avatar" />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/comixloud"
        android:shadowColor="@color/text_shadow"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="3"
        android:text="@string/user"
        android:textColor="@color/light_font"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/user_profile" />

    <TextView
        android:id="@+id/user_difficulty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/comixregular"
        android:shadowColor="@color/text_shadow"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="3"
        android:text="@string/difficulty"
        android:visibility="gone"
        android:textColor="@color/light_font"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/user_name" />

    <LinearLayout
        android:id="@+id/button_list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="120dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/user_difficulty"
        app:layout_constraintBottom_toBottomOf="parent">

        <android.widget.Button
            android:id="@+id/pacients_button"
            style="@style/ButtonStyleMenu"
            android:visibility="gone"
            android:text="@string/pacientes" />

        <android.widget.Button
            android:id="@+id/play_button"
            style="@style/ButtonStyleMenu"
            android:visibility="gone"
            android:text="@string/jugar" />

        <android.widget.Button
            android:id="@+id/information_button"
            style="@style/ButtonStyleMenu"
            android:visibility="gone"
            android:text="@string/informacion" />

        <android.widget.Button
            android:id="@+id/register_button"
            style="@style/ButtonStyleMenu"
            android:visibility="gone"
            android:textSize="16sp"
            android:text="@string/registrar_usuario" />

        <android.widget.Button
            android:id="@+id/configuration_button"
            style="@style/ButtonStyleMenu"
            android:visibility="gone"
            android:text="@string/configuracion" />

        <android.widget.Button
            android:id="@+id/change_profile_button"
            style="@style/ButtonStyleMenu"
            android:text="@string/cambiar_perfil" />

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/about_us_button"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:contentDescription="@string/informacion_de_desarrollo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_info"
        app:background="@drawable/button_selector"
        app:backgroundTint="@color/dark_orange"
        app:tint="#D57C26"
        />


</androidx.constraintlayout.widget.ConstraintLayout>
